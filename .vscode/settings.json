{
    "vsicons.presets.hideExplorerArrows": true,
    "vsicons.presets.foldersAllDefaultIcon": true,

    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#65c89b",
        "activityBar.background": "#65c89b",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#945bc4",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#15202b99",
        "sash.hoverBorder": "#65c89b",
        "statusBar.background": "#42b883",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#359268",
        "statusBarItem.remoteBackground": "#42b883",
        "statusBarItem.remoteForeground": "#15202b",
        "titleBar.activeBackground": "#42b883",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#42b88399",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "peacock.color": "#42b883",

    "files.exclude": {
        "**/__pycache__/": true,
        "**/*.pyc": true,
        ".tools/": true,
        ".venv/": true,
        "poetry.lock": true,
        "docs/config.py": true,
        ".gitignore": true,
        ".gitattributes": true,
        "docs/Makefile": true,
        "pyproject.toml": true,
        "poetry.toml": true,
        "docs/conf.py": true,
        "docs/Kconfig": true,
        "docs/config.old": true,
        "docs/plantuml.config": true,
        "docs/puppeteer-config.json": true,
        "sphinx-contrib/": true,
    },

    "terminal.integrated.defaultProfile.windows": "Git Bash",

    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "editor.rulers": [ 100, 120 ],

    "code-eol.newlineCharacter": "¬",
    "code-eol.returnCharacter": "¤",
    "code-eol.crlfCharacter": "¤¬",

    "indentRainbow.excludedLanguages": [
        "yaml",
        "yml",
    ],

    "path-autocomplete.triggerOutsideStrings": true,

    "pasteImage.encodePath": "none",
    "pasteImage.path": "${currentFileDir}/_figures",
    "pasteImage.prefix": ".. figure:: ",

    "todo-tree.general.tags": [
        "TODO",
        ".. todo::",
        "[ ]",
        "[x]"
    ],

    "esbonio.server.enabled"         : false,
    "esbonio.server.enableDevTools"  : true,
    "esbonio.sphinx.buildCommand"    : ["-W", "-c", "docs/", "docs/", "out/docs/esbonio"],
    "esbonio.preview.showLineMarkers": false,
    "esbonio.preview.httpPort"       : 1985,
    "esbonio.logging.level"          : "error",

    "plantuml.jar": ".tools/plantuml.jar",
    "plantuml.lintDiagramNoName": false,
    "plantuml.jarArgs": [
        // "-config", "./../plantuml.config" // Commented out because it doesn't work. Aborted my tryings...
    ],
    "plantuml.server": "", // Make sure not communicate with internet!

    "markdown-pdf.plantumlServer": "",

    "patternlinks.rules": [
    ],

}
